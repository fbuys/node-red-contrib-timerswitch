    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "node-red": "^3.1.0",
    "node-red-node-test-helper": "^0.3.2",
    "prettier": "3.0.3"
  }
}
